@page
@model OrderAPassWeb.Pages.GroupsWindowModel
@{
}
<form method="post" class="text-center">
    <div class="m-1 d-flex">
        <div class="bg-danger rounded-3" style="width:45%">
            <div class="bg-secondary rounded-3" style="width:auto">Информация для пропусков</div>
            <div class="m-1">
                <p>Срок действия заявки: <br />с <input type="date" name="start_data" /> по <input type="date" name="end_data" /></p>
                <p class="m-1">
                    Цель посещения:<br />
                    <select name="Purose" class="d-block w-100">
                        <option value="За компанию">За компанию</option>
                        <option value="Просто так">Просто так</option>
                        <option value="Учиться">Учиться</option>
                    </select>
                </p>
            </div>

        </div>
        <div class="bg-danger rounded-3" style="width:55%;margin:0 0 0 10px;">
            <div class="bg-secondary rounded-3">Принимающая сторона</div>
            <div class="m-1 text-start">
                <p>
                    Подразделение*: <br />
                    <select name="Subdivision" class="d-block w-100">
                        <option value="Производство">Производство</option>
                        <option value="Сбыт">Сбыт</option>
                        <option value="Администрация">Администрация</option>
                        <option value="Служба безопасности">Служба безопасности</option>
                        <option value="Планирование">Планирование</option>
                        <option value="Общий отдел">Общий отдел</option>
                        <option value="Охрана">Охрана</option>
                    </select>
                </p>
                <div>
                    <p>ФИО*:</p>
                    <p class="d-flex"><input type="text" name="Fio" class="d-block w-100 "></><img src="assets/User.jpg" width="30" height="30" class="" /></p>
                </div>

            </div>


        </div>
    </div>

    <div class="rounded-3 m-1 d-flex">
        <div class="bg-danger w-75">
            <div class="bg-secondary rounded-3">Информация о посетителе</div>
            <div class="d-flex m-3 justify-content-around main" style="">
                <div class="main" style="">
                    <p>Фамилия*: <input type="text" name="Surname" class="5" /></p>
                    <p>Имя*: <input type="text" name="Name" class="" /></p>
                    <p>Отчество*: <input type="text" name="Patrionymic" class="" /></p>
                    <p>Телефон: <input type="text" name="Phone" class="" placeholder="+7(###) ###-##-##" /></p>
                    <p>Email: <input type="email" name="Email" class="" /></p>
                </div>
                <div class="" style="">
                    <p>Организация: <input type="text" name="Department" class="" /></p>
                    <p>Примечание: <input type="text" name="Text" class="" /></p>
                    <p>Дата рождения: <input type="date" name="DateOfBirth" class="" /></p>
                    <p>Серия: <input type="text" name="Seria" class="" pattern="(?=.*\d).{4,4}" /></p>
                    <p>Номер: <input type="text" name="Number" class="" pattern="(?=.*\d).{6,6}" /></p>
                </div>
            </div>
        </div>
        <div class="rounded-3 bg-danger" style="margin:0 0 0 10px;">
            <div class="bg-secondary rounded-3 w-100">Список посетителей</div>
            <div class="d-flex">
                <div><img href="assets/User.jpg" width="15" height="15" /><input type="file" name="file_excel"/>Загрузить список</div>
                <button class="m-2"><img href="assets/User.jpg" width="15" height="15" />Скачать шаблон списка</button>
            </div>
            <table class="table m-1">
                <thead class="">
                    <tr>№ </tr>
                    <tr>ФИО </tr>
                    <tr>Контакты </tr>
                    <tr>Фотография </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 3; i++)
                    {
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><button>Загрузить</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="m-1 d-flex">
        <div class="rounded-3 bg-danger w-50">
            <div class="bg-secondary rounded-3">Прикрепляемые документы</div>
            <input type="file" class="m-1" />
        </div>
        <div class="col w-100 m-3">
            <button>Очистить форму</button>
            <input type="submit" />
        </div>
    </div>

</form>
<style>
    input {
        border-radius: 8px;
        align-content: end;
    }

    .main input {
        float: right;
    }

    .bg-secondary{
        background-color:orange;
    }

    .bg-danger{
        background-color: lightgray;

    }
</style>