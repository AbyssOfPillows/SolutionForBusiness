@page
@model OrderAPassWeb.Pages.IndividualWindowModel
@{
    ViewData["Title"] = "Заявка на индивидуальное посещение";
}
<form method="post" class="text-center" name="my_form">
    <div class="m-1" style="display:flex">
        <div class="bg-danger rounded-3" style="width:45%">
            <div class="bg-secondary rounded-3" style="width:auto">Информация для пропусков</div>
            <div class="m-1">
                <p>Срок действия заявки: <br />с <input type="date" name="start_data" required /> по <input type="date" name="end_data" required /></p>
                <p class="m-1">
                    Цель посещения:<br />
                    <select name="Purpose" class="d-block w-100" required>
                        <option value="За компанию">За компанию</option>
                        <option value="Просто так">Просто так</option>
                        <option value="Учиться">Учиться</option>
                    </select>
                </p>
            </div>
       
        </div>
        <div class="bg-danger rounded-3" style="width:55%;margin:0 0 0 10px;">
            <div class="bg-secondary rounded-3" >Принимающая сторона</div>
            <div class="m-1 text-start">
                <p>Подразделение*: <br />
                    <select name="Subdivision" class="d-block w-100" required onchange="Change">
                        <option value="Производство">Производство</option>
                        <option value="Сбыт">Сбыт</option>
                        <option value="Администрация">Администрация</option>
                        <option value="Служба безопасности">Служба безопасности</option>
                        <option value="Планирование">Планирование</option>
                        <option value="Общий отдел">Общий отдел</option>
                        <option value="Охрана">Охрана</option>
                    </select>
                </p>
                <div>
                    <p>ФИО*:<br />
                        <select name="Fio" class="d-block w-100" onblur="fioEmpEnter" >
                        </select>
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="bg-danger rounded-3 m-1">
        <div class="bg-secondary rounded-3">Информация о посетителе</div>
        <div class="d-flex m-3 justify-content-around main" style="">
            <div class="main" style="">
                <p>Фамилия*: <input type="text" name="Surname" class="5" required /></p>
                <p>Имя*: <input type="text" name="Name" class="" required /></p>
                <p>Отчество*: <input type="text" name="Patronymic" class="" /></p>
                <p>Телефон: <input type="text" name="NumberPhone" class="" placeholder="+7(###) ###-##-##" pattern="^((8|\+7)[\- ]?)?(\(?\d{3}\)?[\- ]?)?[\d\- ]{7,10}$" /></p>
                <p>Email: <input type="email" name="EMail" class="" required /></p>
            </div>
            <div class="" style="">
                <p>Организация: <input type="text" name="Department" class="" /></p>
                <p>Примечание: <input type="text" name="Text" class="" required /></p>
                <p>Дата рождения: <input type="date" name="DateOfBirth" class="" required /></p>
                <p>Серия: <input type="text" name="Seria" class="" pattern="(?=.*\d).{4,4}" required /></p>
                <p>Номер: <input type="text" name="Number" class="" pattern="(?=.*\d).{6,6}" required /></p>
            </div>
            <div class="">
                <div>
                    <img src="assets/User.jpg" class="m-1 rounded-3" width="130" height="130"><br />
                    <button>Загрузить фото</button>
                </div>
            </div>
        </div>
        
    </div>
    <div class="m-1 d-flex">
        <div class="rounded-3 bg-danger w-50">
            <div class="bg-secondary rounded-3">Прикрепляемые документы</div>
            <input type="file" class="m-1"/>
        </div>
        <div class="col w-100 m-3">
            <button>Очистить форму</button>
            <input type="submit"/>
        </div>
    </div>
</form>
<style>
    input{
        border-radius:8px;
        align-content:end;
        
    }
    .main input{
        float: right;
    }

    .bg-secondary {
        background-color: orange;
    }

    .bg-danger {
        background-color: lightgray;
    }
</style>