@page
@model IndexModel
@{
    ViewData["Title"] = "Регистрация";
}

<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter email" name="email">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword">Email address</label>
        <input type="password" class="form-control" id="exampleInputPassword" aria-describedby="emailHelp" placeholder="Enter password" name="password" title="Верхний и нижний регистр, больше 8 символов, спецсимвол, цифра" pattern="(?=.*\d)(?=.*[!#$%^&*])(?=.*[a-z])(?=.*[A-Z]).{8,}">
    </div>
   <input type="submit" />
</form>
<a href="./Auth">Авторизация</a>
<style>
    .form-group{
        margin: 10px;
    }

</style>
