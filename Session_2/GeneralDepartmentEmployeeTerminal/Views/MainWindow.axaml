<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:GeneralDepartmentEmployeeTerminal.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GeneralDepartmentEmployeeTerminal.MainWindow"
        Title="MainWindow"
		x:DataType="vm:MainWindowViewModel">
	<StackPanel>
		<TextBlock Text="Тип"></TextBlock>
		<ComboBox SelectedIndex="{Binding Type}">
			<ComboBoxItem></ComboBoxItem>
			<ComboBoxItem>Individual</ComboBoxItem>
			<ComboBoxItem>Group</ComboBoxItem>
		</ComboBox>
		<TextBlock Text="Подразделения"></TextBlock>
		<TextBox Text="{Binding Departament}"></TextBox>
		
		<Button Command="{Binding Filtration}" Content="Фильтрация"></Button>
		<TreeDataGrid Source="{Binding Source}">
		</TreeDataGrid>
		<Button Command="{Binding Edit}" Content="Редактировать"></Button>
	</StackPanel> 




</Window>
	