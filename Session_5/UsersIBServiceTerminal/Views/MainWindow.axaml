<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UsersIBServiceTerminal.ViewModels"
		xmlns:models="using:UsersIBServiceTerminal.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UsersIBServiceTerminal.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="UsersIBServiceTerminal">
	<TabControl>
		<TabItem Header="Верификация">
			<Grid>
				<DataGrid ItemsSource="{Binding TrueUsersList}">
					<DataGrid.Columns>
						<DataGridTextColumn Header="ФИО" Binding="{Binding Fio}"></DataGridTextColumn>
						<DataGridTextColumn Header="Пол" Binding="{Binding Sex}"></DataGridTextColumn>
					</DataGrid.Columns>
				</DataGrid>
				<Button Content="Сохранить" Command="{Binding SaveUser}" HorizontalAlignment="Center"></Button>
			</Grid>

		</TabItem>
	</TabControl>

</Window>
